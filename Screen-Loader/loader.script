function init(self)
    window.set_dim_mode(window.DIMMING_OFF)

    ScreenFadeStatus = 0
    ScreenFadeAlpha = 1

    CurrentScreen = 0
    NextScreen = 1

    NextProxyLoaded = false
    
    ScreenDisplayTimer = 0

    Platform_HTMLfive = 1
    Platform_Android = 2
    Platform_iOS = 3
    Platform = 0

    local info = sys.get_sys_info()
    if (info.system_name == "Android") then
        Platform = Platform_Android
    elseif (info.system_name == "iPhone OS") then
        Platform = Platform_iOS
    elseif (info.system_name == "HTML5") then
        Platform = Platform_HTMLfive
    end
    
    SecretCodesUnlocked = 0

    ButtonClicked = -1
    ScreenFadeAlphaHalf = 0.5

    ButtonSelectedByKeyboard = 0

    ArrowsSelectedByKeyboard = 0
    ArrowClicked = 0
        
    DelayAllUserInput = 0

    FPS_LastSecond = socket.gettime()
    FPS_FrameCount = 0
    FPS_TenSeconds = {}
    for index = 0, 10 do
        FPS_TenSeconds[index] = 0
    end
    FPS_CurrentSecond = 0
    FPS_Average = 0

    mX = 0
    mY = 0

    MusicVolume = 1.0
    EffectsVolume = 1.0

    MusicTestBGM = 0

    CurrentMusicPlaying = 0
        
    PlayRedLightRacerVoice = true
    
    GameMode = 2

    GamePaused = false

    PlayerScreenX = 180
    PlayerScreenY = 105

    PlayerDirection = 0
    
    HighScoresName = {}
    for i = 0, 2 do
        HighScoresName[i] = {}
